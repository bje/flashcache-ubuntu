#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

DEB_NAME=flashcache
NAME=flashcache
VERSION=1.0-156-g5e5f71e

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp


build: build-stamp

build-stamp: configure-stamp 
	dh_testdir
	$(MAKE) -C src/utils all
	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	-$(MAKE) -C src/utils clean
	#-$(MAKE) clean
	rm -f debian/flashcache-dkms.install
	dh_clean

debian/flashcache-dkms.install:	debian/flashcache-dkms.install.in
	sed -e 's/%VERSION/$(VERSION)/g' <$< >$@

debian/flashcache-dkms.dirs:	debian/flashcache-dkms.dirs.in
	sed -e 's/%VERSION/$(VERSION)/g' <$< >$@

src/dkms.conf:	src/dkms.conf.in
	sed -e 's/%VERSION/$(VERSION)/g' <$< >$@

install: build debian/flashcache-dkms.install debian/flashcache-dkms.dirs.in src/dkms.conf
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs
	dh_install
	install -m 755 common.postinst $(CURDIR)/debian/flashcache-dkms/usr/share/flashcache-dkms/postinst
	install -m 755 -o root -g root src/flashcache.hook $(CURDIR)/debian/flashcache-dkms/etc/initramfs-tools/hooks/flashcache
	#$(MAKE) DESTDIR=$(CURDIR)/debian/$(DEB_NAME)-dkms NAME=$(NAME) VERSION=$(VERSION) install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
